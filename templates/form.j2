{% extends 'base.j2' %}
{% block title %}Pet Form{% endblock %}
{% block content %}
<div class="content">
    <form id="pet-add-form" method="POST">
    {{ form.hidden_tag() }}

    {% for field in form
            if field.widget.input_type != 'hidden' %}

        <div class="form-group">
        {{ field.label }}
        {{ field(class="form-control") }}

        {% for error in field.errors %}
            <small>{{ error }}</small>
        {% endfor %}
        </div>

    {% endfor %}

    <button type="submit">Submit</button>
    </form>
</div>
{% endblock %}